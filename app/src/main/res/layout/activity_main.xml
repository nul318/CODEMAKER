    <RelativeLayout
        android:id="@+id/Board"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:background="@drawable/main_board_selector"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/making"
        android:layout_alignStart="@+id/chat"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/chat"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:background="@drawable/main_chat_selector"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Board"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/making"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:background="@drawable/main_make_selector"
        android:layout_marginTop="140dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Board"></RelativeLayout>

    <RelativeLayout

        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/main_message_selector"
        android:id="@+id/message"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/chat"
        android:layout_alignStart="@+id/chat"></RelativeLayout>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:background="@drawable/total_logo"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:id="@+id/logout2"
        android:background="@drawable/logout_selector"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" /></RelativeLayout>